@model DiaryEntry

@{
    ViewData["Title"] = "Create Diary Entry";
}

<style>
    .form-title {
        background: linear-gradient(to right, #007bff, #0056b3);
        color: white;
        padding: 1rem;
        border-top-left-radius: 0.5rem;
        border-top-right-radius: 0.5rem;
    }

    .card {
        border: none;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem; /* Ensures space between form and footer */
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .footer {
        padding: 10px 0;
        font-size: 0.8rem;
        text-align: center;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="form-title">
                    <h2 class="mb-0"><i class="fas fa-pen"></i> Create Diary Entry</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <!-- Title -->
                        <div class="form-group">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter a title for your entry" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <!-- Content -->
                        <div class="form-group">
                            <label asp-for="Content" class="form-label">Content</label>
                            <textarea asp-for="Content" class="form-control" rows="6" placeholder="Write your thoughts here..."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <!-- Created Date -->
                        <div class="form-group">
                            <label asp-for="Created" class="form-label">Date</label>
                            <input asp-for="Created" type="date" class="form-control" />
                            <span asp-validation-for="Created" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create
                            </button>
                            <a asp-controller="DiaryEnteries" asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
